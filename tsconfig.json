{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "__mocks__/**/*"
  ]
}
